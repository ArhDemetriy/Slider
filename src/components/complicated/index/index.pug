
mixin index(options = {}, items = [])
  -
    items = items.concat(options.items);
    delete options.items;
    options.class = options.class || ''

    const mod = ((mod = '') => new Set( mod.trim().split(/[,\s]\s*/) ))(options.mod)
    delete options.mod;
    // if (mod.includes('dropable'))
    const text = options.text ? `${options.text}` : 'add new slider';
    delete options.text;
    const title = options.title ? `${options.title}` : '';
    delete options.title;

    if (options.class)
      options.class +=  ' index index__js'
    else
      options.class =  'index index__js'

    if (mod.length)
      options.class +=  ` index-${mod.join(` index-`)}`

  div()&attributes(options)&attributes(attributes)
    .index__list_demo
    .index__control
      button(type="button").index__button.index__button--add_template ksduahkasd
    template.index__template
      +demo_block()

